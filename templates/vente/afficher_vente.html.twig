{% extends 'base.html.twig' %}

{% block body %}

    {% block gestion_page %}ventes{% endblock %}
    {% block page_courante %}Afficher une vente{% endblock %}

    {% block contenu %}
   
      
        <div class="row">
        
        <div class="col-12">
        
            <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Clients</h6>
                <div class="col-6 text-end">
                </div>
            </div>
            
            <div class="card-body px-0 pb-2">
           
                <div class="table-responsive p-0">
                
                <a class="btn bg-gradient-dark mb-0" href="{{ path('app_ajout_vente') }}"><i class="material-icons text-sm">add</i>&nbsp;&nbsp;Ajouter un Client</a>
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">id</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Cni</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prenom</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Telephone</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom de l'utilisateur</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Mot de passe</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                            <th class="text-secondary opacity-7"></th>
                        </tr>
                    </thead>
                    
                    <tr>
                        <td>
                            <div class="d-flex px-2 py-1">
                                {{ vente.id }}    
                            </div>
                        </td>

                        <td>
                                {{ vente.dateVente ? vente.dateVente|date('Y-m-d') : ''  }} 
                        </td>

                        <td class="align-middle text-center text-sm">
                                {{ vente.montant }} 
                        </td>

                        <td class="align-middle text-center">
                                {{ vente.client }}
                        </td>

                        <td class="align-middle text-center">
                                {{ vente.voiture }}
                        </td>

                      
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div class="ms-auto text-end">
                                    <a class="btn btn-link text-dark px-3 mb-0" href="{{ path('app_modifier_vente', {'id': vente.id}) }}"><i class="material-icons text-sm me-2">edit</i>MODIFIER</a>
                                    <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="{{ path('app_supprimer_vente', {'id': vente.id}) }}"><i class="material-icons text-sm me-2">delete</i>SUPPRIMER</a>
                                    
                                </div>
                            </div>
                        </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endblock %} 
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Edit Vente{% endblock %}

{% block body %}
    <h1>Modifier une vente</h1>

    {{ include('vente/_form.html.twig', {'button_label': 'Update'}) }}

    {% block contenu %}

        <breadcrumb>

        <div class="card-body">
            {{form_start(form) }}
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Date Vente</label>
                {{form_widget (form.date_vente) }}
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Montant</label>
                {{form_widget (form.montant) }}
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Voiture</label>
                    {{form_widget (form.voiture) }}
            </div>
                <div class="input-group input-group-outline mb-3">
                <label class="form-label">Client</label>
                    {{form_widget (form.client) }}
            </div>
                        
            <div class="text-center">
                <input type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" value="Enregistrer">
            </div>
            {{ form_end(form)}}
        </div>

    {% endblock %}


{% endblock %}

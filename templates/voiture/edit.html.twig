{% extends 'base.html.twig' %}

{% block titre %} Voitures {% endblock %}

{% block gestion_page %}Voitures {% endblock %}

{% block page_courante %}Modifier une voiture {% endblock %}

{% block body %}

    {{ include('voiture/_form.html.twig', {'button_label': 'Update'}) }}

    {% block contenu %}

        <breadcrumb>

            <div class="card-body">
                {{form_start(form) }}
                
                <label class="form-label">Marque</label>
                <div class="input-group input-group-outline mb-3">
                    {{form_widget (form.marque, {'attr': {'class': 'form-control'}}) }}
                </div>
               
                <label class="form-label">Modele</label>
                <div class="input-group input-group-outline mb-3">
                    {{form_widget (form.modele, {'attr': {'class': 'form-control'}}) }}
                </div>

                <label class="form-label">Numero identifiant</label>
                <div class="input-group input-group-outline mb-3">
                    {{form_widget (form.numero_identifiant, {'attr': {'class': 'form-control'}}) }}
                </div>

                <label class="form-label">Numero de serie</label>
                <div class="input-group input-group-outline mb-3">   
                    {{form_widget (form.numero_serie, {'attr': {'class': 'form-control'}}) }}
                </div>

                <label class="form-label">Date d'achat</label>
                <div class="input-group input-group-outline mb-3"> 
                    {{form_widget (form.date_achat, {'attr': {'class': 'form-control'}}) }}
                </div>

                <label class="form-label">Couleur</label>
                <div class="input-group input-group-outline mb-3">
                    {{form_widget (form.couleur, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                
                <div class="text-center">
                    <input type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" value="Enregistrer">
                </div>
            </div>
            
            </div>
        
        </div>
        <footer class="footer position-absolute bottom-2 py-2 w-100">
            <div class="container">
            <div class="row align-items-center justify-content-lg-between">
                
            </div>
            </div>
        </footer>

{% endblock %}
{% endblock %}



{% extends 'base.html.twig' %}

{% block title %}Ajouter une voiture{% endblock %}

{% block body %}
{{ include('voiture/_form.html.twig') }}

    <a href="{{ path('app_voiture_index') }}">back to list</a>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% block contenu %}

        <breadcrumb>

        <div class="card-body">
            {{form_start(form) }}
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Marque</label>
                {{form_widget (form.marque) }}
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Modele</label>
                {{form_widget (form.modele) }}
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">numero d'identification</label>
                    {{form_widget (form.numero_identifiant) }}
            </div>
                <div class="input-group input-group-outline mb-3">
                <label class="form-label">numero de serie</label>
                    {{form_widget (form.numero_serie) }}
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">date_achat</label>
                {{form_widget (form.date_achat) }}
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">couleur</label>
                {{form_widget (form.couleur) }}
            </div>
                        
            <div class="text-center">
                <input type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" value="Enregistrer">
            </div>
            {{ form_end(form)}}
        </div>

    {% endblock %}
{% endblock %}